<h1> <%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li> <%= bookmark.movie.title %> - <%= bookmark.comment %> <%= link_to "Remove", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to "All lists", lists_path, class: "btn btn-primary" %>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
