<nav class="navbar bg-body-secondary">
      <form class="container-fluid justify-content-end">
        <%= link_to "All lists", lists_path, class: "btn btn-outline-primary me-3" %>
        <%= link_to "New list", new_list_path, class:"btn btn-outline-success me-2" %>
      </form>
    </nav>

<div class="container">
  <h1> <%= @list.name %></h1>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
        <img src="<%= bookmark.movie.poster_url %>", class="card-img-top max-height-250" alt="<%= bookmark.movie.title %>">
        <div class="card-body">
          <h5> <%= bookmark.movie.title %> </h5>
          <p> <%= bookmark.comment %> </p>
          <%= link_to "Remove", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></p>
        </div>
      </div>
    <% end %>
    <div class="card-category max-height-250" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR_-vWLIORHZUVQe5RjJMRM2TZx3pAmNFjM7Q&s')">
      <%= link_to "Add a movie", new_list_bookmark_path(@list) %>
    </div>
  </div>
</div>
